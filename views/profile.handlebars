<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
    {{#if company_name}}
    <a href="/createjob">Create</a>
    {{/if}}
  </div>
</div>
  {{#if jobs.length}}
  <div class="">
    <h3>Current Jobs:</h3>
<div class='w-full h-auto flex flex-wrap justify-center'>
  {{#each jobs as |job|}}
  <a href="/jobs/{{job.id}}">
    <div
      class='border-2 border-[#114B5F] rounded-lg p-8 m-4 bg-gradient-to-b from-white to-green-200 to-[#88D498] h-52 w-52 transition ease-in-out hover:scale-110 duration-300'>
      <h1 class='text-[#114B5F] font-bold text-3xl text-center fancy'>{{job.name}}</h1>
      <h2 class='text-[#114B5F] font-bold text-lg text-center'>{{job.user.company_name}}</h2>
      <h2 class='text-[#114B5F] font-bold text-lg text-center mt-2'>{{format_date job.date_created}}</h2>
    </div>
  </a>
        <div class="col-md-4">
          <button id="delete-btn" class="btn btn-sm btn-danger" data-id="{{job.id}}">DELETE</button>
        </div>
  {{/each}}
</div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
