<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Find your Future!</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link
      rel='stylesheet'
      href='https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0'
    />
    <script src='https://cdn.tailwindcss.com'></script>
  </head>

  <body class='bg-[#F3E9D2]'>
    <div>
      <header class='bg-[#88D498] flex lg:flex-row flex-col justify-between'>
        <h1 class='pl-5 min-[320px]:text-center min-[250px]:text-center'>
          <a id='header' href='/'>Future Finder!</a>
        </h1>
        <nav class='flex justify-between px-9 items-center'>
          <!-- Conditionally render login or logout links -->
        
          <form
            id='search-form'
            class='overflow-hidden border-0 outline-0 flex inline-block m-0'
          >
            <input
              id='search-input'
              class='text-[#114B5F]'
              type='text'
              placeholder='Job Title'
            />
            <button id='submit-btn' class='tooltip' type='submit'><span
                class='material-symbols-rounded text-white text-4xl align-middle'
              >
                search
              </span></button>
          </form>
          <button class='tooltip'>
            <a href='/'><span class='material-symbols-rounded text-white text-4xl'>
                home
              </span>
            </a>
            <span class='tooltiptext'>Home</span>
          </button>
          {{#if logged_in}}
            <a href='/profile' class='tooltip px-2'><span
                class='material-symbols-rounded text-white text-4xl'
              >
                account_circle
              </span>
              <span class='tooltiptext'>Profile</span></a>

            <button class='tooltip px-2' id='logout'><span
                class='material-symbols-rounded text-white text-4xl'
              >logout</span>
              <span class='tooltiptext'>Log Out</span></button>
          {{else}}
            <a href='/login' class='tooltip'><span
                class='material-symbols-rounded text-white text-4xl'
              >
                login
              </span>
              <span class='tooltiptext'>Login</span></a>
          {{/if}}
        </nav>
      </header>
      <main class=''>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
  <script src='/js/main.js'></script>
</html>