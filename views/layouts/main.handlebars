<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Find your Future!</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link
      rel='stylesheet'
      href='https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0'
    />
    <script src='https://cdn.tailwindcss.com'></script>
  </head>

  <body class='bg-[#F3E9D2]'>
    <div>
      <header class='bg-[#88D498] flex lg:flex-row flex-col justify-between'>
        <h1 class='pl-5'>
          <a id='header' href='/'>Future Finder!</a>
        </h1>
        <nav class='px-7 mt-4'>
          <!-- Conditionally render login or logout links -->
          <button class="tooltip">
            <a href='/'><span
                class='material-symbols-rounded text-white text-4xl'>
                home
              </span>
              </a>
              <span class="tooltiptext">Home</span>
              </button>
            <form id="search-form">
            <input id="search-input" class="text-[#114B5F]" type="text">
            <button id="submit-btn"><span class='material-symbols-rounded text-white text-4xl'>
              search
            </span></button>
            </form>
          <button id="filter-btn"><span class='material-symbols-rounded text-white text-4xl'>
              filter
            </span></button>
          {{#if logged_in}}
            <a href='/profile'><span
                class='material-symbols-rounded text-white text-4xl'
              >
                account_circle
              </span></a>
            <button class='' id='logout'><span
                class='material-symbols-rounded text-white text-4xl'
              >logout</span></button>
          {{else}}
            <a href='/login'><span
                class='material-symbols-rounded text-white text-4xl'
              >
                login
              </span></a>
          {{/if}}
        </nav>
      </header>
      <main class=''>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>
<script src="/js/main.js"></script>
</html>