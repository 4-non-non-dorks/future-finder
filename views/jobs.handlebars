<div class=''>
  <div class='flex flex-col text-center'>
    <h1 data-id="{{id}}" id="job-title" class='fancy text-3xl m-5 text-[#114B5F]'>{{name}}</h1>
    <p class='apple text-xl font-bold text-[#114B5F]'>{{user.company_name}}</p>
    <p class='apple mt-1 text-xl font-bold text-[#114B5F]'>{{location}}</p>
  </div>

  <div class='bg-[#C6DABF] mx-8 p-8 mt-8 rounded-lg border-2 border-[#114B5F]'>
    <div class='flex flex-col text-center mb-3'>
      <h2 class='apple mb-5 font-bold text-lg text-[#114B5F]'>Description</h2>
      <p class='apple text-lg'>{{description}}</p>
    </div>

    <div class='flex flex-col text-center'>
      <h2 class='apple font-bold text-lg text-[#114B5F]'>Salary</h2>
      <p class='apple'>${{salary}}</p>
      <h2 class='apple font-bold text-lg text-[#114B5F]'>Benefits</h2>
      <p class='apple'>{{benefits}}</p>
      <h2 class='apple font-bold text-lg text-[#114B5F]'>Date Posted</h2>
      <p class='apple'>{{format_date date_created}}</p>
      {{#unless company_name}}
      <button id="bookmark"><span class="material-symbols-rounded text-4xl">
star
</span></button>
{{/unless}}
    </div>
  </div>
  {{#unless company_name}}
  <div class="flex flex-col text-center mt-5">
    <button class='fancy text-3xl m-5 text-[#114B5F]' id="apply-btn">Apply Now</button>
  </div>
{{/unless}}
  </div>
  <div class="overlay hidden" id="overlay-div"></div>
  <div id="modal-div" class="modal hidden">
    <button class="close-modal" id="close-btn">&times;</button>
    <h1 class="text-center fancy  text-4xl text-[#114B5F]">Application Form</h1>
    <form class="modal-p">
        <label for='first-name'>First Name:</label>
        <input class='form-input rounded-xl' type='text' id='first-name' />
        <label for='last-name'>Last Name:</label>
        <input class='form-input rounded-xl' type='text' id='last-name' />
        <label for='email'>Email:</label>
        <input class='form-input rounded-xl' type='text' id='email' />
        <label for='street-address'>Street Address:</label>
        <input class='form-input rounded-xl' type='text' id='street-address' />
        <label for='phone-number'>Phone Number:</label>
        <input class='form-input rounded-xl' type='text' id='phone-number' />
      <button class='btn btn-primary bg-[#88d498]' id="submit-form">Submit</button>
    </form>
  </div>
  <div id="snackbar">Successfully Applied!</div>
  <div id="toast">Bookmarked to your Profile!</div>
  <script src="/js/jobs.js"></script>
</div>