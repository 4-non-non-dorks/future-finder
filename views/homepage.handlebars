<!-- Loop over each object in the projects array -->

<div class='w-full h-auto flex flex-wrap justify-center'>
  {{#each jobs as |job|}}
    <div
      class='border-2 border-[#114B5F] rounded-lg p-8 m-4 bg-gradient-to-b from-white to-green-200 to-[#88D498] h-52 w-52 hover:h-56 hover:w-56 hover:m-2'
    >
      <h1 class='text-[#114B5F] font-bold text-3xl text-center fancy'>{{job.name}}</h1>
      <h2 class='text-[#114B5F] font-bold text-lg text-center'>{{job.user_id}}</h2>
      <h2 class='text-[#114B5F] font-bold text-lg text-center mt-2'>{{format_date job.date_created}}</h2>
    </div>
  {{/each}}
</div>